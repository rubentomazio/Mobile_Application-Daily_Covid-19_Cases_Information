<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            style="@style/TextStyle"
            android:textColor="?attr/onCardColor"
            android:text="@string/vaccine_info2" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            style="@style/TextStyle"
            android:textColor="?attr/onCardColor"
            android:layout_margin="10dp"/>

    </FrameLayout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:backgroundTint="@color/blue">

        <TextView
            android:id="@+id/doses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            style="@style/TextStyle"
            android:textColor="@color/white"
            android:text="@string/total_vaccine_doses"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:backgroundTint="@color/blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            style="@style/TextStyle"
            android:textColor="@color/white"
            android:text="@string/first_vaccine_doses"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/doses1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        style="@style/TextStyle"
        android:textColor="?attr/onCardColor"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/doses1_novas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        style="@style/TextStyle"
        android:textColor="?attr/onCardColor"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/doses1_percentagem"
        style="@style/TextStyle"
        android:textColor="?attr/onCardColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="10dp"/>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:backgroundTint="@color/blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            style="@style/TextStyle"
            android:textColor="@color/white"
            android:text="@string/second_vaccine_doses"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/doses2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        style="@style/TextStyle"
        android:textColor="?attr/onCardColor"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/doses2_novas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        style="@style/TextStyle"
        android:textColor="?attr/onCardColor"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/doses2_percentagem"
        style="@style/TextStyle"
        android:textColor="?attr/onCardColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="10dp"/>

    </LinearLayout>

</ScrollView>